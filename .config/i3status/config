general {
        output_format = "i3bar"
        colors = true
        interval = 5
        markup = "pango"
}

order += "read_file alarmpi_restart"
# order += "ipv6"
order += "disk /"
# order += "run_watch DHCP"
# order += "run_watch VPNC"
# order += "path_exists VPN"
# order += "wireless wlan0"
order += "ethernet _first_"
order += "battery 0"
order += "cpu_temperature 0"
order += "memory"
order += "load"
order += "tztime local"
# order += "tztime berlin"
order += "volume master"
order += "ddate"

volume master {
       device = "pulse"
}

read_file alarmpi_restart {
        path = "/home/pengwyn/alarmpi_restart"
        format = "RPI: %content"
}    

wireless wlan0 {
        format_up = "W: (%quality at %essid, %bitrate) %ip"
        format_down = "W: down"
}

ethernet _first_ {
        format_up = "%ip"
        format_down = "E: down"
}

battery 0 {
        format = "%status %percentage %remaining %emptytime"
        format_down = ""
        status_chr = "âš¡ CHR"
        status_bat = "ðŸ”‹ BAT"
        status_unk = "? UNK"
        status_full = "â˜» FULL"
        path = "/sys/class/power_supply/BAT%d/uevent"
        low_threshold = 10
}

run_watch DHCP {
        pidfile = "/var/run/dhclient*.pid"
}

run_watch VPNC {
        # file containing the PID of a vpnc process
        pidfile = "/var/run/vpnc/pid"
}

path_exists VPN {
        # path exists when a VPN tunnel launched by nmcli/nm-applet is active
        path = "/proc/sys/net/ipv4/conf/tun0"
}

tztime local {
        format_time = "%Y-%m-%d %H:%M:%S"
        format = "<b><span foreground='#00ffff'>%time</span></b>"
        # hide_if_equals_localtime = true
}

# tztime berlin {
#         format = "%Y-%m-%d %H:%M:%S %Z"
#         timezone = "Europe/Berlin"
# }

load {
        format = "Load: %5min"
}

cpu_temperature 0 {
        format = "%degrees Â°C"
        path = "/sys/devices/platform/coretemp.0/hwmon/hwmon2/temp1_input"
        max_threshold = 70
}

memory {
        format = "%used"
        threshold_degraded = "10%"
        format_degraded = "MEMORY: %free"
}

disk "/" {
        # format = "<span foreground=good>%free(%percentage_free)</span>"
        format = "Root: %free<span foreground='#00ff00'> (%percentage_free)</span>"
        format_below_threshold = "Warning only %free (%percentage_free) free"
        low_threshold = 25
        threshold_type = percentage_free
}

read_file uptime {
        path = "/proc/uptime"
}
