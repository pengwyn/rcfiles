wireless wlan0 {
        format_up = "W: (%quality at %essid, %bitrate) %ip"
        format_down = "W: down"
}

ethernet _first_ {
        format_up = "%ip"
        format_down = "E: down"
}

battery 0 {
        format = "%status %percentage %remaining %emptytime (%consumption)"
        format_down = ""
        status_chr = "‚ö° CHR"
        status_bat = "üîã BAT"
        status_unk = "? UNK"
        status_full = "‚òª FULL"
        path = "/sys/class/power_supply/BAT%d/uevent"
        low_threshold = 30
        threshold_type = time
        integer_battery_capacity = true
        last_full_capacity = true
}

tztime local {
        # format_time = "%Y-%m-%d %H:%M:%S"
        # format_time = "%a %d %b %H:%M:%S"
        format_time = "%d %b %H:%M"
        format = "<b><span foreground='#00ffff'>%time</span></b>"
        # hide_if_equals_localtime = true
}

load {
        format = "ÔÄ∫ %5min"
}

cpu_usage {
        format = "ÔÇÖ %usage"
        degraded_threshold = 25
        max_threshold = 75
}

cpu_temperature 0 {
        format = "%degrees ¬∞C"
        # path = "/sys/devices/platform/coretemp.0/hwmon/hwmon1/temp1_input"
        path = "/sys/devices/platform/coretemp.0/hwmon/hwmon?/temp1_input"
        max_threshold = 70
}

memory {
        format = "<span foreground='#ffaa33'>%used (%percentage_used)</span>"
        threshold_degraded = "10%"
        format_degraded = "MEMORY: %free"
}

disk "/" {
        # format = "<span foreground=good>%free(%percentage_free)</span>"
        format = "<span foreground='#ffff00'>ÔÅº %free (%percentage_free)</span>"
        format_below_threshold = "Warning only %free (%percentage_free) free"
        low_threshold = 15
        threshold_type = percentage_free
}

read_file uptime {
        path = "/proc/uptime"
}
