        font pango:mononoki Nerd Font 10
        separator_symbol " "

        # position top
        modifier Mod4
        # mode hide
        output primary
        tray_output none
}

bar {
        id bar-1
        status_command i3status --config ~/.config/i3status/just-time.conf
        font pango:mononoki Nerd Font 10

        modifier Mod4
        mode dock
        output DP-0
        output DVI-0
        # tray_output primary
        tray_padding 1
}

